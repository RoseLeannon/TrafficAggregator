{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./typechain-types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "./test/**/*.ts",
    "./deploy/**/*.ts",
    "./scripts/**/*.ts",
    "./typechain-types/**/*.ts",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache", "dist"]
}
